<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#9d825d">

    <ImageButton
        android:id="@+id/settings_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:layout_gravity="end" />

    <!-- Temp Leaderboard Button, feel free to remove, @epstuart needed to test -->
<!--    <Button-->
<!--        android:id="@+id/leaderboard_btn"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Go to Leaderboard"-->
<!--        android:layout_marginTop="20dp"/>-->

    <ImageButton
        android:id="@+id/profile_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_profile"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:layout_gravity="start" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/global_chat_btn"
        android:layout_width="wrap_content"
        app:fabCustomSize="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_chat"
        app:elevation="0.1dp"
        app:pressedTranslationZ="0dp"
        app:tint="#555555"
        app:maxImageSize="50dp"
        android:backgroundTint="#9d825d"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/achievement_btn"
        android:layout_width="wrap_content"
        app:fabCustomSize="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_achievements"
        app:elevation="0.1dp"
        app:pressedTranslationZ="0dp"
        app:tint="#555555"
        app:maxImageSize="60dp"
        android:backgroundTint="#9d825d"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="90dp"
         />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c2c2c2"
        app:menu="@menu/bottom_nav_menu"
        android:layout_gravity="bottom"/>

    <!-- Temp gameplay button, feel free to remove later -->
</androidx.coordinatorlayout.widget.CoordinatorLayout>

