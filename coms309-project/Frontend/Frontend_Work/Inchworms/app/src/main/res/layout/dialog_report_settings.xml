<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#c2c2c2"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report a User"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="16dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/bad_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Username to Report"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/bad_explanation_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter explanation (optional) (One word. Anymore will not be recorded)"
        android:inputType="text" />

    <Button
        android:id="@+id/settings_report_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:textSize="20sp"
        android:backgroundTint="#6c91c2"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/report_exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textSize="20sp"
        android:background="@color/transparent"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />

</LinearLayout>