<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9d825d"
    tools:context=".HomeFragment"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:layout_gravity="top|center_horizontal"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:textStyle="bold"
        android:text="__________________________________________________________"
        android:textSize="14sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="90dp"
        android:gravity="center">

        <Button
            android:id="@+id/gameplay_btn"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:textSize="20sp"
            android:backgroundTint="#8b7c99"
            android:text="Play Game" />

        <Button
            android:id="@+id/spectate_btn"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:backgroundTint="#8b7c99"
            android:text="Spectate" />

        <Button
            android:id="@+id/daily_btn"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:backgroundTint="#8b7c99"
            android:text="Daily Challenges" />

        <!--  might have to move this to somewhere else on the screen later  -->
        <Button
            android:id="@+id/admin_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:text="Admin Panel"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@android:color/transparent"
            android:layout_marginTop="20dp"/>
    </LinearLayout>



</LinearLayout>