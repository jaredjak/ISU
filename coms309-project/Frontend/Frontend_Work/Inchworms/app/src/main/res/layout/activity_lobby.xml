<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9d825d">

    <!-- Lobby Status TextView -->
    <TextView
        android:id="@+id/lobby_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="248dp"
        android:text="Waiting for players..."
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/player_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/lobby_status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <!-- Spot 1 -->
        <LinearLayout
            android:id="@+id/spot_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/spot_1_skin"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:contentDescription="Skin"
                android:tag="transparent"
                android:src="@drawable/transparent"/>

            <TextView
                android:id="@+id/spot_1_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Player 1"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />
        </LinearLayout>

        <!-- Spot 2 -->
        <LinearLayout
            android:id="@+id/spot_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/spot_2_skin"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:contentDescription="Skin"
                android:tag="transparent"
                android:src="@drawable/transparent"/>

            <TextView
                android:id="@+id/spot_2_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Player 2"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />
        </LinearLayout>

        <!-- Spot 3 -->
        <LinearLayout
            android:id="@+id/spot_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/spot_3_skin"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:contentDescription="Skin"
                android:tag="transparent"
                android:src="@drawable/transparent"/>

            <TextView
                android:id="@+id/spot_3_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Player 3"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />
        </LinearLayout>

        <!-- Spot 4 -->
        <LinearLayout
            android:id="@+id/spot_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/spot_4_skin"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:contentDescription="Skin"
                android:tag="transparent"
                android:src="@drawable/transparent"/>

            <TextView
                android:id="@+id/spot_4_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Player 4"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>